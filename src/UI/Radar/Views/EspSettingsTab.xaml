<UserControl x:Class="LoneEftDmaRadar.UI.Radar.Views.EspSettingsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LoneEftDmaRadar.UI.Radar.Views"
             xmlns:vm="clr-namespace:LoneEftDmaRadar.UI.Radar.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Padding="10">

    <d:UserControl.DataContext>
        <d:DesignInstance Type="{x:Type vm:SettingsViewModel}"
                          IsDesignTimeCreatable="False" />
    </d:UserControl.DataContext>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical"
                    Margin="0,0,0,10">

            <!-- General Settings -->
            <GroupBox Header="ESP Fuser General Settings"
                      Margin="0,0,0,12">
                <StackPanel>
                    <WrapPanel>
                        <Button Content="Start Fuser"
                                Command="{Binding StartEspCommand}"
                                Width="120"
                                Height="32"
                                Margin="0,0,16,8"
                                ToolTip="Opens the ESP Window in Fullscreen Mode."/>
                        <CheckBox Content="Show Windowed ESP"
                                  ToolTip="Enables the external ESP Window (Fuser/Streamproof)."
                                  IsChecked="{Binding ShowESP, Mode=TwoWay}"
                                  Margin="0,0,16,8" />
                        <CheckBox Content="Crosshair"
                                  ToolTip="Displays a simple crosshair at the center of the ESP window."
                                  IsChecked="{Binding EspCrosshair, Mode=TwoWay}"
                                  Margin="0,0,16,8" />
                    </WrapPanel>

                    <WrapPanel Margin="0,4,0,0">
                        <TextBlock Text="Target Screen:" VerticalAlignment="Center" Margin="0,0,8,0" Width="100"/>
                        <ComboBox Width="300"
                                  ItemsSource="{Binding AvailableScreens}"
                                  SelectedValue="{Binding EspTargetScreen, Mode=TwoWay}"
                                  SelectedValuePath="Index"
                                  DisplayMemberPath="DisplayName"
                                  ToolTip="Select which monitor to display the ESP window on when using Start Fuser"/>
                    </WrapPanel>
                    
                    <WrapPanel Margin="0,4,0,0">
                        <TextBlock Text="Resolution Override (0 = Auto): " VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox Width="50" Text="{Binding EspScreenWidth, Mode=TwoWay}" Margin="0,0,8,0" ToolTip="Width (e.g. 1920)"/>
                        <TextBlock Text="x" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox Width="50" Text="{Binding EspScreenHeight, Mode=TwoWay}" Margin="0,0,16,0" ToolTip="Height (e.g. 1080)"/>
                    </WrapPanel>

                    <WrapPanel Margin="0,4,0,0" IsEnabled="{Binding EspCrosshair}">
                        <TextBlock Text="Crosshair Length" VerticalAlignment="Center"/>
                        <Slider x:Name="CrosshairLengthSlider"
                                Width="150"
                                Margin="8,0"
                                Minimum="5"
                                Maximum="100"
                                SmallChange="1"
                                LargeChange="5"
                                Value="{Binding EspCrosshairLength, Mode=TwoWay}"/>
                        <TextBlock Text="{Binding Value, ElementName=CrosshairLengthSlider, StringFormat=F0}"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0"/>
                    </WrapPanel>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Player ESP" Margin="0,0,0,12">
                <StackPanel>
                     <WrapPanel>
                        <CheckBox Content="Box" IsChecked="{Binding EspPlayerBoxes, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Skeleton" IsChecked="{Binding EspPlayerSkeletons, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Names" IsChecked="{Binding EspPlayerNames, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Head Circle" IsChecked="{Binding EspPlayerHeadCircles, Mode=TwoWay}" Margin="0,0,16,8" />
                     </WrapPanel>
                     <WrapPanel Margin="0,4,0,0">
                        <TextBlock Text="Head Circle Size:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Slider x:Name="PlayerHeadCircleSizeSlider"
                                Width="150"
                                Margin="0,0,8,0"
                                Minimum="2"
                                Maximum="15"
                                SmallChange="0.5"
                                LargeChange="2"
                                Value="{Binding EspPlayerHeadCircleSize, Mode=TwoWay}"/>
                        <TextBlock Text="{Binding Value, ElementName=PlayerHeadCircleSizeSlider, StringFormat='{}{0:F1}'}"
                                   VerticalAlignment="Center"
                                   MinWidth="30"/>
                     </WrapPanel>
                     <WrapPanel Margin="0,4,0,0">
                        <TextBlock Text="Max Distance (0 = Unlimited):" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Slider x:Name="PlayerDistanceSlider"
                                Width="200"
                                Margin="0,0,8,0"
                                Minimum="0"
                                Maximum="500"
                                SmallChange="10"
                                LargeChange="50"
                                Value="{Binding EspPlayerMaxDistance, Mode=TwoWay}"/>
                        <TextBlock Text="{Binding Value, ElementName=PlayerDistanceSlider, StringFormat='{}{0:F0}m'}"
                                   VerticalAlignment="Center"
                                   MinWidth="50"/>
                     </WrapPanel>
                </StackPanel>
            </GroupBox>
            
            <GroupBox Header="AI ESP" Margin="0,0,0,12">
                <StackPanel>
                     <WrapPanel>
                        <CheckBox Content="Box" IsChecked="{Binding EspAIBoxes, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Skeleton" IsChecked="{Binding EspAISkeletons, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Names" IsChecked="{Binding EspAINames, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Head Circle" IsChecked="{Binding EspAIHeadCircles, Mode=TwoWay}" Margin="0,0,16,8" />
                     </WrapPanel>
                     <WrapPanel Margin="0,4,0,0">
                        <TextBlock Text="Head Circle Size:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Slider x:Name="AIHeadCircleSizeSlider"
                                Width="150"
                                Margin="0,0,8,0"
                                Minimum="2"
                                Maximum="15"
                                SmallChange="0.5"
                                LargeChange="2"
                                Value="{Binding EspAIHeadCircleSize, Mode=TwoWay}"/>
                        <TextBlock Text="{Binding Value, ElementName=AIHeadCircleSizeSlider, StringFormat='{}{0:F1}'}"
                                   VerticalAlignment="Center"
                                   MinWidth="30"/>
                     </WrapPanel>
                     <WrapPanel Margin="0,4,0,0">
                        <TextBlock Text="Max Distance (0 = Unlimited):" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Slider x:Name="AIDistanceSlider"
                                Width="200"
                                Margin="0,0,8,0"
                                Minimum="0"
                                Maximum="500"
                                SmallChange="10"
                                LargeChange="50"
                                Value="{Binding EspAIMaxDistance, Mode=TwoWay}"/>
                        <TextBlock Text="{Binding Value, ElementName=AIDistanceSlider, StringFormat='{}{0:F0}m'}"
                                   VerticalAlignment="Center"
                                   MinWidth="50"/>
                     </WrapPanel>
                </StackPanel>
            </GroupBox>
            
            <GroupBox Header="Loot &amp; Exfils" Margin="0,0,0,12">
                <StackPanel>
                     <WrapPanel>
                        <CheckBox Content="Show Loot" IsChecked="{Binding EspLoot, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Show Prices" IsChecked="{Binding EspLootPrice, Mode=TwoWay}" Margin="0,0,16,8" IsEnabled="{Binding EspLoot}" />
                        <CheckBox Content="Show Exfils" IsChecked="{Binding EspExfils, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Loot Cone Filter"
                                  IsChecked="{Binding EspLootConeEnabled, Mode=TwoWay}"
                                  Margin="0,0,16,8" />
                     </WrapPanel>
                     <WrapPanel Margin="0,4,0,0">
                        <CheckBox Content="Show Food" IsChecked="{Binding EspFood, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Show Meds" IsChecked="{Binding EspMeds, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Show Backpacks" IsChecked="{Binding EspBackpacks, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Show Corpses" IsChecked="{Binding EspCorpses, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Show Containers" IsChecked="{Binding EspContainers, Mode=TwoWay}" Margin="0,0,16,8" />
                     </WrapPanel>
                     <WrapPanel Margin="0,4,0,0" IsEnabled="{Binding EspLootConeEnabled}">
                        <TextBlock Text="Cone Angle"
                                   VerticalAlignment="Center" />
                        <Slider x:Name="LootConeSlider"
                                Width="150"
                                Margin="8,0"
                                Minimum="5"
                                Maximum="60"
                                SmallChange="1"
                                LargeChange="5"
                                Value="{Binding EspLootConeAngle, Mode=TwoWay}" />
                        <TextBlock Text="{Binding Value, ElementName=LootConeSlider, StringFormat=F0}"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0" />
                     </WrapPanel>
                     <WrapPanel Margin="0,4,0,0" IsEnabled="{Binding EspLootConeEnabled}">
                        <TextBlock Text="Cone Max Distance (0 = Unlimited):" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Slider x:Name="LootConeDistanceSlider"
                                Width="200"
                                Margin="0,0,8,0"
                                Minimum="0"
                                Maximum="500"
                                SmallChange="10"
                                LargeChange="50"
                                Value="{Binding EspLootConeMaxDistance, Mode=TwoWay}"/>
                        <TextBlock Text="{Binding Value, ElementName=LootConeDistanceSlider, StringFormat='{}{0:F0}m'}"
                                   VerticalAlignment="Center"
                                   MinWidth="50"/>
                     </WrapPanel>
                     <WrapPanel Margin="0,4,0,0">
                        <TextBlock Text="Max Distance (0 = Unlimited):" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Slider x:Name="LootDistanceSlider"
                                Width="200"
                                Margin="0,0,8,0"
                                Minimum="0"
                                Maximum="500"
                                SmallChange="10"
                                LargeChange="50"
                                Value="{Binding EspLootMaxDistance, Mode=TwoWay}"/>
                        <TextBlock Text="{Binding Value, ElementName=LootDistanceSlider, StringFormat='{}{0:F0}m'}"
                                   VerticalAlignment="Center"
                                   MinWidth="50"/>
                     </WrapPanel>
                </StackPanel>
            </GroupBox>

            <!-- Visual Settings -->
            <GroupBox Header="Visual Settings" Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Text="Text Rendering:" FontWeight="Bold" Margin="0,0,0,4"/>
                    <WrapPanel Margin="0,0,0,8">
                        <CheckBox Content="Text Outlines"
                                  IsChecked="{Binding EspTextOutlines, Mode=TwoWay}"
                                  Margin="0,0,16,8" />
                    </WrapPanel>

                    <TextBlock Text="Bounding Box Style:" FontWeight="Bold" Margin="0,0,0,4"/>
                    <WrapPanel Margin="0,0,0,8">
                        <CheckBox Content="Corner Boxes (instead of full)"
                                  IsChecked="{Binding EspCornerBoxes, Mode=TwoWay}"
                                  Margin="0,0,16,8" />
                    </WrapPanel>
                    <WrapPanel Margin="0,0,0,8">
                        <TextBlock Text="Corner Length:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Slider x:Name="CornerLengthSlider"
                                Width="150"
                                Margin="0,0,8,0"
                                Minimum="5"
                                Maximum="25"
                                SmallChange="1"
                                LargeChange="5"
                                Value="{Binding EspCornerLength, Mode=TwoWay}"/>
                        <TextBlock Text="{Binding Value, ElementName=CornerLengthSlider, StringFormat='{}{0:F0}'}"
                                   VerticalAlignment="Center"
                                   MinWidth="30"/>
                    </WrapPanel>

                    <TextBlock Text="Distance Effects:" FontWeight="Bold" Margin="0,0,0,4"/>
                    <WrapPanel Margin="0,0,0,8">
                        <CheckBox Content="Opacity Fading"
                                  IsChecked="{Binding EspDistanceFading, Mode=TwoWay}"
                                  Margin="0,0,16,8" />
                        <CheckBox Content="Size Scaling"
                                  IsChecked="{Binding EspDistanceScaling, Mode=TwoWay}"
                                  Margin="0,0,16,8" />
                    </WrapPanel>
                </StackPanel>
            </GroupBox>

            <!-- Performance Settings -->
            <GroupBox Header="Performance"
                      Margin="0,0,0,12">
                <StackPanel>
                    <WrapPanel Margin="0,0,0,8">
                        <TextBlock Text="Max FPS (0 = 144fps default):"
                                   VerticalAlignment="Center"
                                   Width="200" />
                        <TextBox Text="{Binding EspMaxFPS, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Width="80"
                                 Margin="8,0" />
                        <TextBlock Text="Recommended: 60, 144, 240, or 0"
                                   VerticalAlignment="Center"
                                   Foreground="Gray"
                                   FontSize="10"
                                   Margin="8,0" />
                    </WrapPanel>
                    <TextBlock Text="Note: 0 = 144 FPS. High FPS (144+) works even on 60Hz monitors. Lower values save CPU/GPU."
                               TextWrapping="Wrap"
                               Foreground="Gray"
                               FontSize="10"
                               Margin="0,0,0,4" />
                </StackPanel>
            </GroupBox>

        </StackPanel>
    </ScrollViewer>
</UserControl>

